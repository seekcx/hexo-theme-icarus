.ins-section-container
    position: relative
    background: #f7f7f7

.ins-section
    font-size: 14px
    line-height: 16px

    .ins-section-header, .ins-search-item
        padding: 8px 15px

    .ins-section-header
        color: #9a9a9a
        border-bottom: 1px solid #e2e2e2

    .ins-slug
        margin-left: 5px
        color: #9a9a9a

    .ins-slug:before
        content: '('

    .ins-slug:after
        content: ')'

    .ins-search-item header, 
    .ins-search-item .ins-search-preview
        overflow: hidden
        white-space: nowrap
        text-overflow: ellipsis

    .ins-search-item header .ins-title
        margin-left: 8px

    .ins-search-item .ins-search-preview
        height: 15px
        font-size: 12px
        color: #9a9a9a
        margin: 5px 0 0 20px

    .ins-search-item:hover, 
    .ins-search-item.active
        color: #fff
        background: #3273dc

    .ins-search-item:hover .ins-slug, 
    .ins-search-item.active .ins-slug, 
    .ins-search-item:hover .ins-search-preview, 
    .ins-search-item.active .ins-search-preview
        color: #fff